<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.HomeActivity"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/left_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="370dp"
            android:layout_height="470dp"
            android:id="@+id/left_tree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/tree"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oranges"
            android:layout_width="280dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"/>
        <ImageView
            android:layout_width="370dp"
            android:layout_height="470dp"
            android:id="@+id/left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/right_part"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">
        <ImageView
            android:layout_width="370dp"
            android:layout_height="470dp"
            android:id="@+id/right_tree"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            android:layout_marginStart="410dp"
            android:src="@drawable/tree"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oranges_right"
            android:layout_width="280dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"/>
        <ImageView
            android:layout_width="370dp"
            android:layout_height="470dp"
            android:id="@+id/right"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            android:layout_marginStart="410dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageView
        android:layout_width="225dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintBottom_toBottomOf = "parent"
        android:layout_marginStart="260dp"
        android:src="@drawable/monkey_back"/>

    <TextView
        android:id="@+id/textView_whichtree"
        android:layout_width="321dp"
        android:layout_height="140dp"
        android:fontFamily="@font/skranji_bold"
        android:text="Which tree has bigger fruits?"
        android:textAlignment="center"
        android:textSize="36sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_countdown"
        android:layout_width="230dp"
        android:layout_height="245dp"
        android:fontFamily="@font/skranji_bold"
        android:text="3"
        android:textAlignment="center"
        android:textSize="180sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <ImageView
        android:id="@+id/quit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/quit_button_text"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/settings_cancel_button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/pause_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pause_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <FrameLayout
        android:id="@+id/frameLay3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/paused_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/paused_background" />

        <ImageView
            android:id="@+id/continue_pause"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginStart="295dp"
            android:layout_marginTop="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/continue_pause" />

        <ImageView
            android:id="@+id/restart_pause"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restart_pause" />

        <ImageView
            android:id="@+id/quit_pause"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginStart="485dp"
            android:layout_marginTop="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/quit_pause" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>