<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.OptionalActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="I"
            android:textSize="20sp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:id="@+id/glass_spinner"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="glasses or contacts"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="I"
            android:textSize="20sp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:id="@+id/disorder_spinner"/>
        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="any neurological disorders"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="I"
            android:textSize="20sp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:id="@+id/disability_spinner"/>
        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="any learning disabilities"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_background"
        android:text="Back"
        android:textColor="@color/colorPrimary" />
</LinearLayout>